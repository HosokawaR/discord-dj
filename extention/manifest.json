{
    "name": "Music Library for YouTube",
    "description": "YouTube から直接 Music Library に音楽を登録できます。",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": ["storage"],
    "options_ui": { "page": "options.html", "open_in_tab": false },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "css": ["content-style.css"],
            "js": ["content-script.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/images/*", "config.js", "options.js"],
            "matches": ["https://*.youtube.com/*"]
        }
    ]
}
